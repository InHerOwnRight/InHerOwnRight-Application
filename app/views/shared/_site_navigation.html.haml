%nav.navbar.navbar-default.navbar-left
  .container-fluid
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.col-md-12#site-nav-list
        %li
          = link_to "About", page_path("about/about")

        %li
          = link_to "Catalog", page_path("catalog")

        %li.dropdown
          %a.dropdown-toggle{href: "#", role: "button", "data-toggle" => "dropdown", "aria-haspopup"=>"true", "aria-expanded"=>"false"}
            Collections
            %span.caret
          %ul.dropdown-menu
            - collection_records.each do | collection |
              %li
                = link_to collection.dc_titles.first.title, record_path(collection.id)

        %li.dropdown
          %a.dropdown-toggle{href: "#", role: "button", "data-toggle" => "dropdown", "aria-haspopup"=>"true", "aria-expanded"=>"false"}
            Essays and Exibits
            %span.caret
          %ul.dropdown-menu
            - Dir["app/views/pages/essays/*"].each do |file|
              %li
                - page_id = file.split("/").last.split('.').first
                = link_to titleize_dropdown_links("#{page_id}"), page_path("essays/#{page_id}")

        %li.dropdown
          %a.dropdown-toggle{href: "#", role: "button", "data-toggle" => "dropdown", "aria-haspopup"=>"true", "aria-expanded"=>"false"}
            Tutorials
            %span.caret
          %ul.dropdown-menu
            - Dir["app/views/pages/Tutorials/*"].each do |file|
              %li
                - page_id = file.split("/").last.split('.').first
                = link_to titleize_dropdown_links("#{page_id}"), page_path("tutorials/#{page_id}")