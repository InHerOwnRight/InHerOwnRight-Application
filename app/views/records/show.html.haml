%h3
  = @record.dc_titles.first.title
%table.table
  %thead
    %tr
  %thead
    %tbody
      - if @record.dc_dates.any?
        = render 'dc_dates'

      - if @record.dc_creators.any?
        = render 'dc_creators'

      - if @record.dc_contributors.any?
        = render 'dc_contributor'

      - if @record.dc_publishers.any?
        = render 'dc_publishers'

      - if @record.dc_descriptions.any?
        = render 'dc_descriptions'

      - if @record.dc_terms_extents.any?
        = render 'dc_terms_extents'

      - if @record.dc_types.any?
        = render 'dc_types'

      - if @record.dc_subjects.any?
        = render 'dc_subjects'

      - if @record.dc_terms_spacials.any?
        = render 'dc_terms_spacials'

      - if @record.dc_languages.any?
        = render 'dc_languages'

      - if @record.dc_identifiers.any?
        = render 'dc_identifiers'

      - if !@record.repository_id.blank?
        = render 'repository'

      - if @record.dc_rights.any?
        = render 'dc_rights'

      - if @record.file_name
        = render 'image_sample'
